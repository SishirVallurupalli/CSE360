   <center>
      <AnchorPane prefHeight="708.0" prefWidth="856.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="logout" layoutX="466.0" layoutY="85.0" mnemonicParsing="false" onAction="#LogOut" text="Log out" />
            <Button fx:id="startTask" layoutX="26.0" layoutY="306.0" mnemonicParsing="false" onAction="#startTask" text="Start Task" />
            <Button fx:id="endTask" layoutX="135.0" layoutY="306.0" mnemonicParsing="false" onAction="#endTask" text="End Task" />
            <ComboBox fx:id="comboBox" layoutX="30.0" layoutY="118.0" prefWidth="150.0" promptText="Choose a Project" />
            <TextField fx:id="newTask" layoutX="105.0" layoutY="239.0" promptText="Add a Project" />
            <Label layoutX="26.0" layoutY="243.0" text="New Project:" />
            <Button fx:id="addTask" layoutX="455.0" layoutY="239.0" mnemonicParsing="false" onAction="#addInputToComboBox" text="Add Project" />
            <Label fx:id="time" layoutX="332.0" layoutY="310.0" text="0" />
            <Label layoutX="237.0" layoutY="311.0" text="Time Spent" />
            <Label layoutX="278.0" layoutY="31.0" text="Effort Console:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="31.0" layoutY="89.0" text="1. Select Project" />
            <Label layoutX="26.0" layoutY="202.0" text="2. Add a New Project or Start the Task" />
            <ComboBox fx:id="categories" layoutX="286.0" layoutY="239.0" prefWidth="150.0" promptText="Choose Category" />
            <Button fx:id="edit" layoutX="390.0" layoutY="85.0" mnemonicParsing="false" text="Edit" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
